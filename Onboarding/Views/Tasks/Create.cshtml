@model Onboarding.Models.Task

@{
    ViewData["Title"] = "Create";
}

<style>
    .create-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    }

    .create-header {
        color: #2c3e50;
        border-bottom: 2px solid #3498db;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #ddd;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
    }

    .control-label {
        color: #7f8c8d;
        font-size: 0.9em;
        margin-bottom: 5px;
        display: block;
    }

    .text-danger {
        font-size: 0.85em;
        margin-top: 5px;
    }

    .text-muted {
        font-size: 0.85em;
        margin-top: 5px;
        display: block;
    }

    .btn-custom {
        padding: 10px 25px;
        border-radius: 20px;
        transition: transform 0.2s, background-color 0.3s;
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        background-color: #2980b9;
    }

    .back-link {
        color: #3498db;
        text-decoration: none;
        transition: color 0.3s;
    }

    .back-link:hover {
        color: #2980b9;
        text-decoration: underline;
    }

    .form-icon {
        position: absolute;
        left: 10px;
        top: 38px;
        color: #7f8c8d;
        font-size: 1.2em;
    }

    .form-group.with-icon .form-control {
        padding-left: 35px;
    }
</style>

<div class="create-container">
    <h1 class="create-header">Nowe zadanie</h1>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="MentorId" class="control-label">Mentor</label>
                    <select asp-for="MentorId" class="form-control" asp-items="ViewBag.MentorId">
                        <option value="">Wybierz mentora</option>
                    </select>
                </div>

                <div class="form-group with-icon">
                    <label asp-for="Title" class="control-label">Tytuł</label>
                    <i class="bi bi-pencil form-icon"></i>
                    <input asp-for="Title" class="form-control" placeholder="Wprowadź tytuł zadania" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group with-icon">
                    <label asp-for="Description" class="control-label">Opis</label>
                    <i class="bi bi-text-paragraph form-icon"></i>
                    <input asp-for="Description" class="form-control" placeholder="Wprowadź opis zadania" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CourseId" class="control-label">Kurs</label>
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                        <option value="">Wybierz kurs</option>
                    </select>
                </div>

                <div class="form-group with-icon">
                    <label class="control-label">Treść artykułu</label>
                    <i class="bi bi-file-text form-icon"></i>
                    <input type="text" name="ArticleContent" class="form-control" placeholder="Dodaj treść artykułu (opcjonalne)" />
                    <span class="text-muted">Opcjonalne: Dodaj powiązany artykuł do tego zadania.</span>
                </div>

                <div class="form-group with-icon">
                    <label class="control-label">Linki</label>
                    <i class="bi bi-link-45deg form-icon"></i>
                    <input type="text" name="Links" class="form-control" placeholder="Dodaj linki oddzielone spacją (opcjonalne)" />
                    <span class="text-muted">Opcjonalne: Dodaj linki do tego zadania, oddzielone spacjami.</span>
                </div>

                <div class="form-group d-flex justify-content-center align-items-center gap-3">
                    <input type="submit" value="Utwórz" class="btn btn-primary btn-custom" />
                    <a asp-action="Index" class="btn btn-outline-primary btn-custom">
                        <i class="bi bi-list-ul me-1"></i> Lista zadań
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-custom">
                        <i class="bi bi-arrow-left me-1"></i> Powrót
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}