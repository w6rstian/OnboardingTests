@model IEnumerable<Onboarding.Models.Task>

@{
    ViewData["Title"] = "Twoje Taski jako Mentor";
}

<div class="container mt-4">
    <h2 class="mb-4">Twoje taski jako Mentor</h2>

    <div class="list-group">
        @foreach (var task in Model)
        {
            <a asp-action="Details" asp-route-id="@task.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">@task.Title</h5>
                    <small class="text-muted">@task.Course?.Name</small>
                </div>
                <span class="badge bg-primary rounded-pill">Szczegóły</span>
            </a>
        }
    </div>
</div>
